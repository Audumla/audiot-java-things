<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventFactory" class="net.audumla.devices.activator.MockEventFactory" >
        <property name="duration" value="2" />
        <property name="synchronous" value="true" />
    </bean>

    <bean id="eventHandler" class="net.audumla.automate.ActivatorEventHandler" scope="prototype">
        <property name="activator" ref="activator"/>
    </bean>

    <bean id="activator" class="net.audumla.devices.activator.ActivatorMock" scope="prototype">
        <constructor-arg index="0" value="true"/>
        <constructor-arg index="1" value="true"/>
    </bean>

    <bean id="timer1" class="net.audumla.automate.scheduler.AtomicSchedule" init-method="enable">
        <constructor-arg ref="scheduler"/>
        <property name="handler" ref="eventHandler"/>
        <property name="factory" ref="eventFactory"/>
        <property name="syncGroup" value="group1" />
    </bean>

    <bean id="timer2" class="net.audumla.automate.scheduler.AtomicSchedule" init-method="enable">
        <constructor-arg ref="scheduler"/>
        <property name="handler" ref="eventHandler"/>
        <property name="factory" ref="eventFactory"/>
        <property name="syncGroup" value="group1" />
    </bean>

    <bean id="timer3" class="net.audumla.automate.scheduler.AtomicSchedule" init-method="enable">
        <constructor-arg ref="scheduler"/>
        <property name="handler" ref="eventHandler"/>
        <property name="factory" ref="eventFactory"/>
        <property name="syncGroup" value="group1" />
    </bean>

    <bean id="timer4" class="net.audumla.automate.scheduler.AtomicSchedule" init-method="enable">
        <constructor-arg ref="scheduler"/>
        <property name="handler" ref="eventHandler"/>
        <property name="factory" ref="eventFactory"/>
        <property name="syncGroup" value="group1" />
    </bean>

    <bean id="timer5" class="net.audumla.automate.scheduler.AtomicSchedule" init-method="enable">
        <constructor-arg ref="scheduler"/>
        <property name="handler" ref="eventHandler"/>
        <property name="factory" ref="eventFactory"/>
        <property name="syncGroup" value="group1" />
    </bean>

    <bean id="scheduler" class="net.audumla.automate.scheduler.Scheduler" init-method="initialize" destroy-method="shutdown">
    </bean>

</beans>